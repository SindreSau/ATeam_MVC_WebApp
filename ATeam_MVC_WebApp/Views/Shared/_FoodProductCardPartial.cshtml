@model ATeam_MVC_WebApp.ViewModels.FoodProductViewModel

<div class="card mb-3">
    <div class="card-body rounded-5">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="card-title h3 mb-0">@Model.ProductName</h2>
            @if (Model.NokkelhullQualified)
            {
                <span class="badge bg-success">NÃ¸kkelhull</span>
            }
        </div>
        <p class="card-text text-muted small mb-2">
            Category: @Model.CategoryName
        </p>
        <div class="row mb-3">
            <div class="col-auto">
                <span class="badge bg-primary">Energy @Model.EnergyKcal g</span>
            </div>
            <div class="col-auto">
                <span class="badge bg-discovery">Protein @Model.Protein g</span>
            </div>
            <div class="col-auto">
                <span class="badge bg-warning">Fat @Model.Fat g</span>
            </div>
            <div class="col-auto">
                <span class="badge bg-light text-bg-light">Carbs @Model.Carbohydrates g</span>
            </div>
            <div class="col-auto">
                <span class="badge bg-danger text-bg-danger">Fiber @Model.Fiber g</span>
            </div>
            <div class="col-auto">
                <span class="badge bg-secondary text-bg-dark">Salt @Model.Salt g</span>
            </div>

        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-sm btn-outline-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div>
@model IEnumerable<ATeam_MVC_WebApp.ViewModels.FoodProductViewModel>

<div class="container my-4">
    <h2 class="mb-4">All Food Products</h2>
    
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <ul class="list-group list-group-flush border-start-0 border-end-0">
                            <li class="list-group-item px-3">Energy: @product.EnergyKcal kcal</li>
                            <li class="list-group-item px-3">Fat: @product.Fat g</li>
                            <li class="list-group-item px-3">Carbohydrates: @product.Carbohydrates g</li>
                            <li class="list-group-item px-3">Protein: @product.Protein g</li>
                        </ul>
                        <button type="button" class="btn btn-primary mt-3">Learn More</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model System.Collections.Generic.List<ATeam_MVC_WebApp.ViewModels.FoodProductViewModel>
@{
    Layout = "_Layout";
}

<h2>All Food Products</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Created By</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.CategoryName</td>
                <td>@product.CreatedByUsername</td>
                <!-- Add other columns as needed -->
            </tr>
        }
    </tbody>
</table>
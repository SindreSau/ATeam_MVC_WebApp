@model ATeam_MVC_WebApp.ViewModels.CreateFoodProductViewModel


@{

}

<form asp-action="Create" method="post">
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Product name</label>
    <div class="col-sm-10">
      <input asp-for="ProductName" class="form-control" id="inputProductName">
      <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Fat</label>
    <div class="col-sm-10">
      <input asp-for="EnergyKcal" class="form-control" step="0.01" id="inputFat">
      <span asp-validation-for="EnergyKcal" class="text-danger"></span>
    </div>
  </div>

  @* Some more advanced asp-for and form features for number *@
  <div class="row mb-3">
    <label asp-for="Fat" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="number" value="0.0"  asp-for="Fat" class="form-control" step="0.1" id="inputFat">
      <span asp-validation-for="Fat" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Carbohydrates</label>
    <div class="col-sm-10">
      <input asp-for="Carbohydrates" class="form-control" step="0.01" id="inputCarbohydrates">
      <span asp-validation-for="Carbohydrates" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Protein</label>
    <div class="col-sm-10">
      <input asp-for="Protein" class="form-control" step="0.01" id="inputProtein">
      <span asp-validation-for="Protein" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Fiber</label>
    <div class="col-sm-10">
      <input asp-for="Fiber" class="form-control" step="0.01" id="inputFiber">
      <span asp-validation-for="Fiber" class="text-danger"></span>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Salt</label>
    <div class="col-sm-10">
      <input asp-for="Salt" class="form-control" step="0.01" id="inputSalt">
      <span asp-validation-for="Salt" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="FoodCategoryId" class="control-label"></label>
    @Html.DropDownListFor(model => model.FoodCategoryId, (SelectList)ViewBag.Categories, "Select a Category", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.FoodCategoryId, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    <label asp-for="NokkelhullQualified" class="control-label"></label>
    @Html.DropDownListFor(model => model.NokkelhullQualified, new SelectList(new[]
    {
        new { Value = true, Text = "True" },
        new { Value = false, Text = "False" }
    }, "Value", "Text"), "Velg et alternativ", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.NokkelhullQualified, "", new { @class = "text-danger" })
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

